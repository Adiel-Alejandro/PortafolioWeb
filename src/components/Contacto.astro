<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>contacto</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
<style>
  body{
    font-family: Montserrat; sans-serif;
  }
  section {
    padding: 0;
  }

  .contenedor-contacto form {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: center;
  }

  .contenedor-contacto input,
  .contenedor-contacto textarea {
    font-family: "Montserrat", sans-serif;
    width: 350px;
    padding: 10px 12px;
    border: 2px solid #8d8d8d;
    border-radius: 6px;
    background-color: #222;
    color: #fff;
    font-size: 16px;
    transition: border-color 0.3s;
    margin-top: 5px;
  }

  .contenedor-contacto input:focus,
  .contenedor-contacto textarea:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
  }

  .contenedor-contacto textarea {
    resize: vertical;
  }

  .contenedor-contacto .btn {
    font-family: "Montserrat", sans-serif;
    width: 360px;
    padding: 12px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .contenedor-contacto .btn:hover {
    background-color: #0056b3;
  }
</style>

<section>
  <div class="contenedor-contacto">
    <form
      id="contacto"
      action="https://formsubmit.co/liroy159@gmail.com"
      method="POST"
      onsubmit="return validarFormulario()"
      class="formulario"
    >
      <input type="text" id="nombre" name="nombre" placeholder="Escribe tu nombre" required/>
      <input type="tel" id="numero" name="numero" placeholder="Escribe tu número" required/>
      <input type="email" id="correo" name="correo" placeholder="Escribe tu correo" required/>
      <textarea id="mensaje" name="mensaje" rows="4" placeholder="Escribe un mensaje" required></textarea>

      <input type="hidden" name="_captcha" value="false" />
      <input type="hidden" name="_next" value="/gracias" />

      <input type="submit" class="btn" value="Enviar" />
    </form>
  </div>

  <script>
    function validarFormulario() {
      const nombre = document.getElementById("nombre").value.trim();
      const numero = document.getElementById("numero").value.trim();
      const correo = document.getElementById("correo").value.trim();
      const mensaje = document.getElementById("mensaje").value.trim();

      const correoValido = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      const soloNumeros = /^\d+$/;

      if (!nombre || !numero || !correo || !mensaje) {
        alert("Por favor, completa todos los campos.");
        return false;
      }

      if (!soloNumeros.test(numero)) {
        alert("El número debe contener solo dígitos.");
        return false;
      }

      if (!correoValido.test(correo)) {
        alert("Por favor, introduce un correo válido.");
        return false;
      }

      return true;
    }
  </script>
</section>
</body>
</html>